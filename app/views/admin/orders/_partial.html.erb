<table class="table table-striped text-left table-bordered">
  <thead></thead>
  <tr>
    <th>Order ID</th>
    <th>Full Name</th>
    <th>Status</th>
    <th>Total Price</th>
  </tr>
  <tbody>
    <tr><% @orders.each do |order| %></tr>
    <td><%= link_to order.id, order_path(order) %></td>
    <td><%= order.user.full_name %></td>
    <td><%= order.status %></td>
    <td><%= order.total_price %></td>
    <% end %>
  </tbody>
</table>
