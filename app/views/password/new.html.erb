<% provide(:title, "Forgot password") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: '/password-confirmation' do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control'%>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
